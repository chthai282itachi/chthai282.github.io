<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='name'><div class='{style.label}'>Name</div><div class='{style.value}'><g:TextBox ui:field='name'/></div></div>
    <div id='type'><div class='{style.label}'>Type</div><div class='{style.value}'><g:ValueListBox ui:field='type'/></div></div>
    <div id='price'><div class='{style.label}'>Price</div><div class='{style.value}'><g:IntegerBox ui:field='price'/></div></div>
    <div id='priceType'><div class='{style.label}'>Price Type</div><div class='{style.value}'><g:ValueListBox ui:field='priceType'/></div></div>
    <div id='usedMaterials'><div class='{style.label}'>Used Materials</div><div class='{style.value}'><a:UsedMaterialSetEditor ui:field='usedMaterials'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
