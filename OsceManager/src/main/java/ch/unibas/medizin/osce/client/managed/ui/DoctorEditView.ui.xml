<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Doctor</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Doctor</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="gender">
                <td>
                    <div class="{style.label}">Gender:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="gender"/>
                </td>
            </tr>
      <tr id="title">
                <td>
                    <div class="{style.label}">Title:</div>
                </td>
                <td>
                    <g:TextBox ui:field="title"/>
                </td>
            </tr>
      <tr id="name">
                <td>
                    <div class="{style.label}">Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="name"/>
                </td>
            </tr>
      <tr id="preName">
                <td>
                    <div class="{style.label}">Pre Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="preName"/>
                </td>
            </tr>
      <tr id="email">
                <td>
                    <div class="{style.label}">Email:</div>
                </td>
                <td>
                    <g:TextBox ui:field="email"/>
                </td>
            </tr>
      <tr id="telephone">
                <td>
                    <div class="{style.label}">Telephone:</div>
                </td>
                <td>
                    <g:TextBox ui:field="telephone"/>
                </td>
            </tr>
      <tr id="clinic">
                <td>
                    <div class="{style.label}">Clinic:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="clinic"/>
                </td>
            </tr>
      <tr id="office">
                <td>
                    <div class="{style.label}">Office:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="office"/>
                </td>
            </tr>
      <tr id="isActive">
                <td>
                    <div class="{style.label}">Is Active:</div>
                </td>
                <td>
                    <g:CheckBox ui:field="isActive"/>
                </td>
            </tr>
      <tr id="specialisation">
                <td>
                    <div class="{style.label}">Specialisation:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="specialisation"/>
                </td>
            </tr>
      <tr id="roleParticipants">
                <td>
                    <div class="{style.label}">Role Participants:</div>
                </td>
                <td>
                    <a:RoleParticipantSetEditor ui:field="roleParticipants"/>
                </td>
            </tr>
    </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
