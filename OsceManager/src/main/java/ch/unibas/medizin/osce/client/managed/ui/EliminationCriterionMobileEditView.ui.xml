<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='anamnesisCheckValue'><div class='{style.label}'>Anamnesis Check Value</div><div class='{style.value}'><g:CheckBox ui:field='anamnesisCheckValue'/></div></div>
    <div id='standardizedRole'><div class='{style.label}'>Standardized Role</div><div class='{style.value}'><g:ValueListBox ui:field='standardizedRole'/></div></div>
    <div id='scar'><div class='{style.label}'>Scar</div><div class='{style.value}'><g:ValueListBox ui:field='scar'/></div></div>
    <div id='anamnesisCheck'><div class='{style.label}'>Anamnesis Check</div><div class='{style.value}'><g:ValueListBox ui:field='anamnesisCheck'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
