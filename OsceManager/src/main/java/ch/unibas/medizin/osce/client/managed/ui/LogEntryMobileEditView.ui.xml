<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='shibId'><div class='{style.label}'>Shib Id</div><div class='{style.value}'><g:IntegerBox ui:field='shibId'/></div></div>
    <div id='logtime'><div class='{style.label}'>Logtime</div><div class='{style.value}'><d:DateBox ui:field='logtime'/></div></div>
    <div id='oldValue'><div class='{style.label}'>Old Value</div><div class='{style.value}'><g:TextBox ui:field='oldValue'/></div></div>
    <div id='newValue'><div class='{style.label}'>New Value</div><div class='{style.value}'><g:TextBox ui:field='newValue'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
