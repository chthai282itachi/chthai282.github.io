<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='link'><div class='{style.label}'>Link</div><div class='{style.value}'><g:TextBox ui:field='link'/></div></div>
    <div id='comment'><div class='{style.label}'>Comment</div><div class='{style.value}'><g:TextBox ui:field='comment'/></div></div>
    <div id='standardizedPatient'><div class='{style.label}'>Standardized Patient</div><div class='{style.value}'><g:ValueListBox ui:field='standardizedPatient'/></div></div>
    <div id='contentType'><div class='{style.label}'>Content Type</div><div class='{style.value}'><g:ValueListBox ui:field='contentType'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
