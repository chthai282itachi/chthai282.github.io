<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='bankName'><div class='{style.label}'>Bank Name</div><div class='{style.value}'><g:TextBox ui:field='bankName'/></div></div>
    <div id='iBAN'><div class='{style.label}'>I B A N</div><div class='{style.value}'><g:TextBox ui:field='iBAN'/></div></div>
    <div id='bIC'><div class='{style.label}'>B I C</div><div class='{style.value}'><g:TextBox ui:field='bIC'/></div></div>
    <div id='ownerName'><div class='{style.label}'>Owner Name</div><div class='{style.value}'><g:TextBox ui:field='ownerName'/></div></div>
    <div id='postalCode'><div class='{style.label}'>Postal Code</div><div class='{style.value}'><g:IntegerBox ui:field='postalCode'/></div></div>
    <div id='city'><div class='{style.label}'>City</div><div class='{style.value}'><g:TextBox ui:field='city'/></div></div>
    <div id='country'><div class='{style.label}'>Country</div><div class='{style.value}'><g:ValueListBox ui:field='country'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
