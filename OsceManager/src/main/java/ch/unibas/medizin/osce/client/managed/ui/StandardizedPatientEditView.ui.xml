<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit StandardizedPatient</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New StandardizedPatient</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>

    <table class="{style.fields}" id="boundElementHolder">
      <tr id="gender">
                <td>
                    <div class="{style.label}">Gender:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="gender"/>
                </td>
            </tr>
      <tr id="name">
                <td>
                    <div class="{style.label}">Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="name"/>
                </td>
            </tr>
      <tr id="preName">
                <td>
                    <div class="{style.label}">Pre Name:</div>
                </td>
                <td>
                    <g:TextBox ui:field="preName"/>
                </td>
            </tr>
      <tr id="street">
                <td>
                    <div class="{style.label}">Street:</div>
                </td>
                <td>
                    <g:TextBox ui:field="street"/>
                </td>
            </tr>
      <tr id="city">
                <td>
                    <div class="{style.label}">City:</div>
                </td>
                <td>
                    <g:TextBox ui:field="city"/>
                </td>
            </tr>
      <tr id="postalCode">
                <td>
                    <div class="{style.label}">Postal Code:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="postalCode"/>
                </td>
            </tr>
      <tr id="telephone">
                <td>
                    <div class="{style.label}">Telephone:</div>
                </td>
                <td>
                    <g:TextBox ui:field="telephone"/>
                </td>
            </tr>
      <tr id="telephone2">
                <td>
                    <div class="{style.label}">Telephone2:</div>
                </td>
                <td>
                    <g:TextBox ui:field="telephone2"/>
                </td>
            </tr>
      <tr id="mobile">
                <td>
                    <div class="{style.label}">Mobile:</div>
                </td>
                <td>
                    <g:TextBox ui:field="mobile"/>
                </td>
            </tr>
      <tr id="height">
                <td>
                    <div class="{style.label}">Height:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="height"/>
                </td>
            </tr>
      <tr id="weight">
                <td>
                    <div class="{style.label}">Weight:</div>
                </td>
                <td>
                    <g:IntegerBox ui:field="weight"/>
                </td>
            </tr>
      <tr id="immagePath">
                <td>
                    <div class="{style.label}">Immage Path:</div>
                </td>
                <td>
                    <g:TextBox ui:field="immagePath"/>
                </td>
            </tr>
      <tr id="videoPath">
                <td>
                    <div class="{style.label}">Video Path:</div>
                </td>
                <td>
                    <g:TextBox ui:field="videoPath"/>
                </td>
            </tr>
      <tr id="nationality">
                <td>
                    <div class="{style.label}">Nationality:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="nationality"/>
                </td>
            </tr>
      <tr id="profession">
                <td>
                    <div class="{style.label}">Profession:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="profession"/>
                </td>
            </tr>
      <tr id="birthday">
                <td>
                    <div class="{style.label}">Birthday:</div>
                </td>
                <td>
                    <d:DateBox ui:field="birthday"/>
                </td>
            </tr>
      <tr id="email">
                <td>
                    <div class="{style.label}">Email:</div>
                </td>
                <td>
                    <g:TextBox ui:field="email"/>
                </td>
            </tr>
      <tr id="descriptions">
                <td>
                    <div class="{style.label}">Descriptions:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="descriptions"/>
                </td>
            </tr>
      <tr id="bankAccount">
                <td>
                    <div class="{style.label}">Bank Account:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="bankAccount"/>
                </td>
            </tr>
      <tr id="maritalStatus">
                <td>
                    <div class="{style.label}">Marital Status:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="maritalStatus"/>
                </td>
            </tr>
      <tr id="workPermission">
                <td>
                    <div class="{style.label}">Work Permission:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="workPermission"/>
                </td>
            </tr>
      <tr id="socialInsuranceNo">
                <td>
                    <div class="{style.label}">Social Insurance No:</div>
                </td>
                <td>
                    <g:TextBox ui:field="socialInsuranceNo"/>
                </td>
            </tr>
      <tr id="anamnesisForm">
                <td>
                    <div class="{style.label}">Anamnesis Form:</div>
                </td>
                <td>
                    <g:ValueListBox ui:field="anamnesisForm"/>
                </td>
            </tr>
      <tr id="langskills">
                <td>
                    <div class="{style.label}">Langskills:</div>
                </td>
                <td>
                    <a:LangSkillSetEditor ui:field="langskills"/>
                </td>
            </tr>
    </table>

    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
