<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	 xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../../styles.css">
	.standardTable input {
		width: 100%;
		opacity: 0.8;
	}
	
	.icon
	{
		float: left;
		margin: 4px;
	}
	
	.icon:hover {
		cursor: pointer;
	}
	
	.maxWidth {
		margin-bottom: 8px;
	}
	.right{
		
		float:right
	}
	</ui:style>
	<ui:with type="ch.unibas.medizin.osce.client.style.resources.UiIcons" field="uiIcons"></ui:with>	
	<g:HTMLPanel>
	<g:HorizontalPanel>
	
	<g:Label ui:field="questionLbl"></g:Label>
	<!-- edit -->
	<g:Image ui:field="edit" styleName="{style.icon} {style.right} " resource="{uiIcons.triangle1South}"></g:Image>
	</g:HorizontalPanel>
	
	</g:HTMLPanel>
</ui:UiBinder> 