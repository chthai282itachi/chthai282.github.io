<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:ch.unibas.medizin.osce.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:ch.unibas.medizin.osce.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="field">
            <div class="{style.label}">Field</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="field"/>
            </div>
        </div>
    <div id="objectId">
            <div class="{style.label}">Object Id</div>
            <div class="{style.value}">
                <g:LongBox ui:field="objectId"/>
            </div>
        </div>
    <div id="bindType">
            <div class="{style.label}">Bind Type</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="bindType"/>
            </div>
        </div>
    <div id="comparation">
            <div class="{style.label}">Comparation</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="comparation"/>
            </div>
        </div>
    <div id="value">
            <div class="{style.label}">Value</div>
            <div class="{style.value}">
                <g:TextBox ui:field="value"/>
            </div>
        </div>
    <div id="shownValue">
            <div class="{style.label}">Shown Value</div>
            <div class="{style.value}">
                <g:TextBox ui:field="shownValue"/>
            </div>
        </div>
    <div id="standardizedRole">
            <div class="{style.label}">Standardized Role</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="standardizedRole"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
