<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='gender'><div class='{style.label}'>Gender</div><div class='{style.value}'><g:ValueListBox ui:field='gender'/></div></div>
    <div id='title'><div class='{style.label}'>Title</div><div class='{style.value}'><g:TextBox ui:field='title'/></div></div>
    <div id='name'><div class='{style.label}'>Name</div><div class='{style.value}'><g:TextBox ui:field='name'/></div></div>
    <div id='preName'><div class='{style.label}'>Pre Name</div><div class='{style.value}'><g:TextBox ui:field='preName'/></div></div>
    <div id='email'><div class='{style.label}'>Email</div><div class='{style.value}'><g:TextBox ui:field='email'/></div></div>
    <div id='telephone'><div class='{style.label}'>Telephone</div><div class='{style.value}'><g:TextBox ui:field='telephone'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
