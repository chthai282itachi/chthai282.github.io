<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='roomNumber'><div class='{style.label}'>Room Number</div><div class='{style.value}'><g:TextBox ui:field='roomNumber'/></div></div>
    <div id='oscePostRooms'><div class='{style.label}'>Osce Post Rooms</div><div class='{style.value}'><a:OscePostRoomSetEditor ui:field='oscePostRooms'/></div></div>
    <div id='length'><div class='{style.label}'>Length</div><div class='{style.value}'><g:DoubleBox ui:field='length'/></div></div>
    <div id='width'><div class='{style.label}'>Width</div><div class='{style.value}'><g:DoubleBox ui:field='width'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
