<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class='{style.underline}'>    
      <h3 class='{style.header}' ui:field="editTitle">
        <ui:msg>Edit Osce</ui:msg>
      </h3>
      <h3 class='{style.header}' ui:field='createTitle'><ui:msg>New Osce</ui:msg></h3>
    </div>
    <div ui:field='errors' class='{style.errors}'></div>

    <table id='boundElementHolder' class="{style.fields}">
      <tr id='studyYear'><td><div class='{style.label}'>Study Year:</div></td><td><g:ValueListBox ui:field='studyYear'/></td></tr>
      <tr id='maxNumberStudents'><td><div class='{style.label}'>Max Number Students:</div></td><td><g:IntegerBox ui:field='maxNumberStudents'/></td></tr>
      <tr id='numberPosts'><td><div class='{style.label}'>Number Posts:</div></td><td><g:IntegerBox ui:field='numberPosts'/></td></tr>
      <tr id='numberCourses'><td><div class='{style.label}'>Number Courses:</div></td><td><g:IntegerBox ui:field='numberCourses'/></td></tr>
      <tr id='postLength'><td><div class='{style.label}'>Post Length:</div></td><td><g:IntegerBox ui:field='postLength'/></td></tr>
      <tr id='isRepeOsce'><td><div class='{style.label}'>Is Repe Osce:</div></td><td><g:CheckBox ui:field='isRepeOsce'/></td></tr>
      <tr id='numberRooms'><td><div class='{style.label}'>Number Rooms:</div></td><td><g:IntegerBox ui:field='numberRooms'/></td></tr>
      <tr id='isValid'><td><div class='{style.label}'>Is Valid:</div></td><td><g:CheckBox ui:field='isValid'/></td></tr>
      <tr id='semester'><td><div class='{style.label}'>Semester:</div></td><td><g:ValueListBox ui:field='semester'/></td></tr>
      <tr id='osce_days'><td><div class='{style.label}'>Osce_days:</div></td><td><a:OsceDaySetEditor ui:field='osce_days'/></td></tr>
      <tr id='courses'><td><div class='{style.label}'>Courses:</div></td><td><a:CourseSetEditor ui:field='courses'/></td></tr>
      <tr id='tasks'><td><div class='{style.label}'>Tasks:</div></td><td><a:TaskSetEditor ui:field='tasks'/></td></tr>
      <tr id='osceStudents'><td><div class='{style.label}'>Osce Students:</div></td><td><a:StudentOscesSetEditor ui:field='osceStudents'/></td></tr>
    </table>

    <div class='{style.bar}'>
      <g:Button addStyleNames='{style.button}' ui:field='save'>Save</g:Button>
      <g:Button addStyleNames='{style.button}' ui:field='cancel'>Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
