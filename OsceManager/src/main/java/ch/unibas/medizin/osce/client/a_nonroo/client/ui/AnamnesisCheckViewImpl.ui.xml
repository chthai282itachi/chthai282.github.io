<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:ch.unibas.medizin.osce.client.style.widgets">
	<ui:style src="../styles.css" />

	<g:SplitLayoutPanel ui:field="splitLayoutPanel">
		<g:west size="400">
			<g:ScrollPanel>
				<g:HTMLPanel>
					<div class="{style.controls} {style.controlsleft} ">
						<my:QuickSearchBox ui:field="searchBox" />
						<my:IconButton icon="arrowrefresh-1-w" ui:field="refreshButton" />
						<g:ListBox width="150px"  ui:field="filterTitle"/>
						<b:SimplePager display="{table}" ui:field="pager" />
					</div>

					<b:CellTable ui:field="table" addStyleNames="{style.standardTable}" />


					<div class="{style.textBoxStyle} {style.controlsleft}">
						<my:IconButton ui:field="newButton" icon="plusthick"></my:IconButton>
						<div class="{style.textBoxStyle}">
							<g:Label width="140px" />
						</div>

					</div>
					<div class="{style.textBoxStyle} {style.controlsleft}">
					<g:Button width="80px" text="Save Order" ui:field="saveOrder"></g:Button>
                    </div>
					<div class="{style.listBoxStyle}">
						<g:ListBox width="50px" ui:field="rangeNum" />
					</div>

					<!-- <g:SimplePanel ui:field="detailsPanel"></g:SimplePanel> -->
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:ScrollPanel>
				<g:SimplePanel ui:field="detailsPanel"></g:SimplePanel>
			</g:ScrollPanel>
		</g:center>
	</g:SplitLayoutPanel>
</ui:UiBinder> 