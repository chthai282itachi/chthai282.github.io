<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='semester'><div class='{style.label}'>Semester</div><div class='{style.value}'><g:ValueListBox ui:field='semester'/></div></div>
    <div id='calYear'><div class='{style.label}'>Cal Year</div><div class='{style.value}'><g:IntegerBox ui:field='calYear'/></div></div>
    <div id='administrators'><div class='{style.label}'>Administrators</div><div class='{style.value}'><a:AdministratorSetEditor ui:field='administrators'/></div></div>
    <div id='osces'><div class='{style.label}'>Osces</div><div class='{style.value}'><a:OsceSetEditor ui:field='osces'/></div></div>
    <div id='patientsInSemester'><div class='{style.label}'>Patients In Semester</div><div class='{style.value}'><a:PatientInSemesterSetEditor ui:field='patientsInSemester'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
