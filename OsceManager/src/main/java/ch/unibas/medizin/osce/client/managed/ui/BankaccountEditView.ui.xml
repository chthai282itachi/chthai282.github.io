<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:ch.unibas.medizin.osce.client.scaffold.ui'
  xmlns:a='urn:import:ch.unibas.medizin.osce.client.managed.ui'>

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class='{style.underline}'>    
      <h3 class='{style.header}' ui:field="editTitle">
        <ui:msg>Edit Bankaccount</ui:msg>
      </h3>
      <h3 class='{style.header}' ui:field='createTitle'><ui:msg>New Bankaccount</ui:msg></h3>
    </div>
    <div ui:field='errors' class='{style.errors}'></div>

    <table id='boundElementHolder' class="{style.fields}">
      <tr id='bankName'><td><div class='{style.label}'>Bank Name:</div></td><td><g:TextBox ui:field='bankName'/></td></tr>
      <tr id='iBAN'><td><div class='{style.label}'>I B A N:</div></td><td><g:TextBox ui:field='iBAN'/></td></tr>
      <tr id='bIC'><td><div class='{style.label}'>B I C:</div></td><td><g:TextBox ui:field='bIC'/></td></tr>
      <tr id='ownerName'><td><div class='{style.label}'>Owner Name:</div></td><td><g:TextBox ui:field='ownerName'/></td></tr>
      <tr id='postalCode'><td><div class='{style.label}'>Postal Code:</div></td><td><g:IntegerBox ui:field='postalCode'/></td></tr>
      <tr id='city'><td><div class='{style.label}'>City:</div></td><td><g:TextBox ui:field='city'/></td></tr>
      <tr id='country'><td><div class='{style.label}'>Country:</div></td><td><g:ValueListBox ui:field='country'/></td></tr>
    </table>

    <div class='{style.bar}'>
      <g:Button addStyleNames='{style.button}' ui:field='save'>Save</g:Button>
      <g:Button addStyleNames='{style.button}' ui:field='cancel'>Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
